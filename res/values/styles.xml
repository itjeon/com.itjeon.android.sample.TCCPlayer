<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="OnscreenActionIcon">
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">13dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dip</item>
    </style>

    <style name="MediaButton">
        <item name="android:background">@drawable/media_button_background</item>
        <item name="android:layout_width">71dip</item>
        <item name="android:layout_height">52dip</item>
    </style>

    <style name="MediaButton.Previous">
        <item name="android:src">@android:drawable/ic_media_previous</item>
    </style>

    <style name="MediaButton.Next">
        <item name="android:src">@android:drawable/ic_media_next</item>
    </style>

    <style name="MediaButton.Play">
        <item name="android:src">@android:drawable/ic_media_pause</item>
    </style>

    <style name="MediaButton.Ffwd">
        <item name="android:src">@android:drawable/ic_media_ff</item>
    </style>

    <style name="MediaButton.Rew">
        <item name="android:src">@android:drawable/ic_media_rew</item>
    </style>

    <style name="MediaButton.Pause">
        <item name="android:src">@android:drawable/ic_media_pause</item>
    </style>
    
    <style name="MediaExtraButton">
        <item name="android:background">@drawable/media_button_background</item>
        <item name="android:layout_width">75dip</item>
        <item name="android:layout_height">75dip</item>
    </style>

    <style name="MediaExtraButton.AudioTrack">
        <item name="android:src">@drawable/ic_media_audio_track</item>
    </style>

    <style name="MediaExtraButton.Subtitle">
        <item name="android:src">@drawable/ic_media_subtitle_type</item>
    </style>

    <style name="MediaExtraButton.SubtitleSetting">
        <item name="android:src">@drawable/ic_media_subtitle_setting</item>
    </style>

    <style name="MediaExtraButton.PlaySpeed">
        <item name="android:src">@drawable/ic_media_play_speed</item>
    </style>

    <style name="MediaExtraButton.ScreenLayout">
        <item name="android:src">@drawable/ic_media_screen_layout</item>
    </style>

</resources>
